post_install() {
  echo "  # When started, Mnemosyne 2.0 looks for a Mnemosyne 1.x database in"
  echo "  #   ~/.mnemosyne/"
  echo "  # and tries to automatically import it. It won't overwrite it, though,"
  echo "  # as it stores its own database in"
  echo "  #   ~/.local/share/mnemosyne/"
  echo "  # After it has been successfully imported once, manually delete the old"
  echo "  # ~/.mnemosyne/ folder so it won't be automatically imported again."
}
