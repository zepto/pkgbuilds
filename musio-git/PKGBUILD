# Maintainer: Josiah Gordon <josiahg@gmail.com>
pkgname=musio-git
pkgver=20130119
pkgrel=1
pkgdesc="A python audio I/O library."
arch=(any)
url="lime.tree"
license=('GPL3')
depends=(python)
optdepends=(portaudio alsa-lib ffmpeg espeak mpg123 faad2 libmp4v2 libgme fluidsynth dumb libmodplug libmikmod audiality libogg libvorbis libxmp)
makedepends=('git')
provides=(musio)
conflicts=(musio)
replaces=(musio)

_gitroot=http://www.github.com/zepto/musio
_gitname=musio.git

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #
}

package() {
  cd "$srcdir/$_gitname-build"
  python=$(which python)

  $python setup.py install --root="$pkgdir"

  install -d "$pkgdir/usr/share/doc/$pkgname"

  cp -r README.mkd utils examples "$pkgdir/usr/share/doc/$pkgname"

  install -D -m 644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/license.txt"
}

# vim:set ts=2 sw=2 et:
