# Maintainer: Josiah Gordon <josiahg@gmail.com>
pkgname=musio-git
pkgver=r301.a20f315
pkgrel=1
pkgdesc="A python audio I/O library."
arch=(any)
url="lime.tree"
license=('GPL3')
depends=(python)
optdepends=(portaudio alsa-lib espeak mpg123 faad2 libmp4v2 libgme fluidsynth dumb libmodplug libmikmod audiality libogg libvorbis libxmp lame libid3tag opusfile libadlmidi)
makedepends=('git')
provides=(musio)
conflicts=(musio)
replaces=(musio)
source=("git+https://www.github.com/zepto/musio.git")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/${pkgname%-git}"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  cd "$srcdir/${pkgname%-git}"
  python=$(which python)

  $python setup.py install --root="$pkgdir"

  install -d "$pkgdir/usr/share/doc/$pkgname"

  cp -r README.mkd examples "$pkgdir/usr/share/doc/$pkgname"

  install -D -m 644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/license.txt"
}

# vim:set ts=2 sw=2 et:
