pkgname=python2-ropemode
_pkgname=ropemode
pkgver=0.2
pkgrel=1
pkgdesc="A helper for using rope refactoring library in IDEs"
url='http://bitbucket.org/agr/ropemode'
arch=('any')
license=('GPL')
depends=('python2-rope')
source=("http://bitbucket.org/agr/${_pkgname}/get/${pkgver}.tar.bz2")
